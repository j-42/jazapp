/* You can add global styles to this file, and also import other style files */

fonts = Helvetica, Arial, sans-serif

$lightgrey = rgba(0,0,0,0.3)
$main = #556080
$mainhover = #4e6eca
$error = #e90814

*
  box-sizing border-box
  position relative
  margin 0
  padding 0
  outline none


body, html, app-root
  width 100%
  min-height 100vh
  max-width 100%
  display flex
  flex-direction: column
  align-items center
  font 16px/1.2 fonts

nav, section
  width: 100%
  height: 100%
  display flex
  justify-content center
  align-items center

li
  margin 0 10px 0 0
  list-style none

a
  text-decoration none

nav
  flex 0
  padding 10px
  ul
    display flex
    justify-content center
    align-items center
    

section
  padding 30px
  flex-direction column

app-root 
  > section
    flex: 1

svg
  width 32px
  height 32px